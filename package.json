{
  "name": "wealth-management-platform-fe",
  "version": "0.0.0",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "start:proxy-debug": "cross-env DEBUG=http-proxy-middleware:* ng serve",
    "build": "ng build",
    "watch": "ng build --watch --configuration development",
    "test": "ng test",
    "serve:ssr:Wealth-Management-Platform-FE": "node dist/Wealth-Management-Platform-FE/server/server.mjs",
    "openapi:gen:customer": "openapi-generator-cli generate -i openapi/customer-api-data.yaml -g typescript-angular -o src/app/api/customer-service --additional-properties=providedInRoot=true,withInterfaces=true,ngVersion=20.0.0,enumNameSuffix=Enum",
    "openapi:gen:document": "openapi-generator-cli generate -i openapi/document-api-data.yaml -g typescript-angular -o src/app/api/document-service --additional-properties=providedInRoot=true,withInterfaces=true,ngVersion=20.0.0,enumNameSuffix=Enum",
    "openapi:gen:user": "openapi-generator-cli generate -i openapi/user-api-data.yaml -g typescript-angular -o src/app/api/user-service --additional-properties=providedInRoot=true,withInterfaces=true,ngVersion=20.0.0,enumNameSuffix=Enum",
    "openapi:gen:all": "npm run openapi:gen:customer && npm run openapi:gen:document && npm run openapi:gen:user"
  },
  "prettier": {
    "printWidth": 100,
    "singleQuote": true,
    "overrides": [
      {
        "files": "*.html",
        "options": {
          "parser": "angular"
        }
      }
    ]
  },
  "private": true,
  "dependencies": {
    "@angular/common": "^20.2.2",
    "@angular/compiler": "^20.2.2",
    "@angular/core": "^20.2.2",
    "@angular/forms": "^20.2.2",
    "@angular/platform-browser": "^20.2.2",
    "@angular/platform-server": "^20.2.2",
    "@angular/router": "^20.2.2",
    "@angular/ssr": "^20.2.2",
    "express": "^5.1.0",
    "rxjs": "~7.8.0",
    "tslib": "^2.3.0",
    "zone.js": "~0.15.0"
  },
  "devDependencies": {
    "@angular/build": "^20.2.2",
    "@angular/cli": "^20.2.2",
    "@angular/compiler-cli": "^20.2.2",
    "@types/express": "^5.0.1",
    "@types/jasmine": "~5.1.0",
    "@types/node": "^20.17.19",
    "@openapitools/openapi-generator-cli": "^2.13.1",
    "cross-env": "^7.0.3",
    "jasmine-core": "~5.9.0",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "typescript": "~5.9.2"
  }
}
